# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_KEY=your_supabase_service_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# WhatsApp Configuration
WHATSAPP_PHONE_NUMBER=your_whatsapp_number
PORT=3001

# Authentication State Path (optional)
AUTH_STATE_PATH=./auth-state

# PostHog Analytics Configuration
POSTHOG_API_KEY=your_posthog_api_key
POSTHOG_HOST=https://us.i.posthog.com

# Analytics Monitoring & Alerting (Story 6.5)
# Opt-out spike detection threshold (percentage)
OPTOUT_SPIKE_THRESHOLD=20

# Alert channels (optional)
ALERT_EMAIL=team@example.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/xxx

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_PORT=3002
# Telegram user allowlist for dev/testing. Format: "telegramId:supabaseUserId" (comma-separated)
# If no userId provided, uses the first user in the DB
TELEGRAM_ALLOWED_IDS=196962141
# Optional: Set for webhook mode (leave empty for long-polling)
# TELEGRAM_WEBHOOK_URL=https://your-app.railway.app/telegram/webhook
# TELEGRAM_WEBHOOK_SECRET=your_secret_token

# Environment
NODE_ENV=production
