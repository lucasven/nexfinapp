{
  "name": "expense-tracker-whatsapp-bot",
  "version": "1.0.0",
  "description": "WhatsApp bot for expense tracking",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --no-deprecation dist/index.js",
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "cleanup-parsers": "tsx scripts/cleanup-parsers.ts",
    "data-retention-cleanup": "tsx src/scripts/data-retention-cleanup.ts",
    "extract-ocr": "tsx src/scripts/extract-ocr-samples.ts",
    "cron:generate-payments": "tsx src/cron/generate-recurring-payments.ts",
    "test": "jest",
    "test:unit": "jest",
    "test:integration": "jest --config jest.config.integration.js",
    "test:integration:isolated": "./scripts/run-integration-tests.sh",
    "test:all": "npm run test:unit && npm run test:integration:isolated",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "expense-tracker",
    "baileys"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@supabase/supabase-js": "^2.39.3",
    "@whiskeysockets/baileys": "^6.7.9",
    "compromise": "^14.11.0",
    "compromise-numbers": "^1.4.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "libphonenumber-js": "^1.10.51",
    "node-cron": "^4.2.1",
    "openai": "^4.28.0",
    "pino": "^8.17.2",
    "posthog-node": "^5.11.2",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.33.2",
    "tesseract.js": "^5.0.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.6",
    "@types/qrcode-terminal": "^0.12.2",
    "jest": "^29.7.0",
    "supabase": "^2.62.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
